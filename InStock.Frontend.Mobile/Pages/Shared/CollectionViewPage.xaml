<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:templateSelectors="clr-namespace:InStock.Fontend.Mobile.TemplateSelectors"
             x:Class="InStock.Frontend.Mobile.Pages.Shared.CollectionViewPage"
             Title="{Binding Title}">
    <ContentPage.Resources>
        <templateSelectors:CollectionViewItemTemplateSelector x:Key="TemplateSelector" />
    </ContentPage.Resources>

    <CollectionView ItemsSource="{Binding Items}"
                    VerticalOptions="FillAndExpand"
                    HorizontalOptions="FillAndExpand"
                    ItemTemplate="{StaticResource TemplateSelector}"
                    SelectionMode="None" />

</ContentPage>