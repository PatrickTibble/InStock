<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="InStock.Frontend.Mobile.Pages.Login.CreateAccountPage"
             xmlns:pm="clr-namespace:InStock.Frontend.Core.PageModels.Login;assembly=InStock.Frontend.Core"
             x:DataType="pm:CreateAccountPageModel"
             xmlns:input="clr-namespace:InStock.Frontend.Mobile.Views.Input"
             Title="CreateAccountPage">
    <VerticalStackLayout>
        <input:PrimaryEntryView BindingContext="{Binding FirstNameViewModel}" />
        <input:PrimaryEntryView BindingContext="{Binding LastNameViewModel}" />
        <input:PrimaryEntryView BindingContext="{Binding UsernameViewModel}" />
        <input:PrimaryEntryView BindingContext="{Binding PasswordViewModel}" />
        <input:PrimaryEntryView BindingContext="{Binding ConfirmPasswordViewModel}" />

        <HorizontalStackLayout>
            <input:PrimaryRoundButton BindingContext="{Binding CancelViewModel}" />
            <input:PrimaryRoundButton BindingContext="{Binding ConfirmViewModel}" />
        </HorizontalStackLayout>
    </VerticalStackLayout>
</ContentPage>