<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="InStock.Frontend.Mobile.Views.ListItems.MenuItemView">
    <VerticalStackLayout>
        <VerticalStackLayout.GestureRecognizers>
            <TapGestureRecognizer Command="{Binding Command}" />
        </VerticalStackLayout.GestureRecognizers>
        <Label Text="{Binding Title}" FontSize="Large" TextColor="{StaticResource Gray900}" />
        <Label Text="{Binding Subtitle}" FontSize="Medium" TextColor="{StaticResource Gray900}" />
    </VerticalStackLayout>
</ContentView>