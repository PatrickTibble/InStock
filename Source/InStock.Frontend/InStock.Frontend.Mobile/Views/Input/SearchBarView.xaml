<?xml version="1.0" encoding="utf-8" ?>
<frames:RoundedCardFrame 
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:frames="clr-namespace:InStock.Frontend.Mobile.Views.Frames"
    xmlns:vm="clr-namespace:InStock.Frontend.Core.ViewModels.Input;assembly=InStock.Frontend.Core"
    x:DataType="vm:SearchBarViewModel"
    HeightRequest="60"
    x:Class="InStock.Frontend.Mobile.Views.Input.SearchBarView">
    <StackLayout 
        Padding="5,3"
        Orientation="Horizontal"
        Spacing="0">
        <Image 
            Margin="5"
            Aspect="AspectFit"
            Source="{Binding LeftIcon}"
            IsVisible="{Binding LeftIcon, Converter={StaticResource NotNullOrEmptyConverter}}" />
        <Entry
            Text="{Binding Text}"
            HorizontalOptions="FillAndExpand"
            IsPassword="{Binding IsPassword}"
            Placeholder="{Binding Placeholder}"
            TextColor="{StaticResource Gray900}"
            PlaceholderColor="{StaticResource Gray300}" />
        <Image 
            Margin="5"
            Aspect="AspectFit"
            Source="{Binding RightIcon}"
            IsVisible="{Binding RightIcon, Converter={StaticResource NotNullOrEmptyConverter}}" />
    </StackLayout>
</frames:RoundedCardFrame>