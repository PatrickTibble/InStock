<?xml version="1.0" encoding="utf-8" ?>
<ContentView 
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:vm="clr-namespace:InStock.Frontend.Core.ViewModels.Input;assembly=InStock.Frontend.Core"
    x:DataType="vm:PrimaryEntryViewModel"
    HorizontalOptions="FillAndExpand"
    xmlns:frames="clr-namespace:InStock.Frontend.Mobile.Views.Frames"
    xmlns:shadows="clr-namespace:InStock.Frontend.Mobile.Views.Shadows"
    x:Class="InStock.Frontend.Mobile.Views.Input.PrimaryEntryView">
    <ContentView.Shadow>
        <shadows:PrimaryShadow />
    </ContentView.Shadow>
    <StackLayout 
        Margin="12,0"
        Spacing="8">
        <Label
            Text="{Binding Placeholder}"
            HorizontalOptions="FillAndExpand"
            TextColor="{Binding IsValid, Converter={StaticResource ValidToTextColorConverter}}"
            Opacity="0.8"
            FontSize="{StaticResource Paragraph}" />
        <frames:PrimaryCardFrame 
            Padding="5,3"
            BorderColor="{Binding IsValid, Converter={StaticResource ValidToBorderColorConverter}}">
            <StackLayout 
                Orientation="Horizontal" 
                Spacing="0">
                <Image 
                    Margin="5"
                    x:Name="mIcon" 
                    IsVisible="False"
                    WidthRequest="16"
                    Aspect="AspectFit" />
                <Entry
                    HorizontalOptions="FillAndExpand"
                    Text="{Binding Text}"
                    TextColor="{StaticResource Gray900}"
                    Placeholder="{Binding Placeholder}"
                    IsPassword="{Binding IsPassword}" />
            </StackLayout>
        </frames:PrimaryCardFrame>
        <Label
            Text="{Binding ValidationMessage}"
            HorizontalOptions="FillAndExpand"
            TextColor="{StaticResource ErrorColor}"
            IsVisible="{Binding ValidationMessage, Converter={StaticResource NotNullOrEmptyConverter}}"
            Opacity="0.8"
            FontSize="{StaticResource Paragraph}" />
    </StackLayout>
</ContentView>